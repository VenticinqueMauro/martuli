                  <span className="text-7xl font-black float-left mr-3 leading-[0.7] mt-1 font-serif">E</span>
                  {articleContent}
                </div>
              </div>
            </div>
          </section>

          {/* Sidebar (4 cols) */}
          <aside className="lg:col-span-4 space-y-8 border-l-2 border-black/20 pl-0 lg:pl-8">
